    <script src="~/Content/vendor/jquery-3.5.1.slim.min.js"></script>
    <script src="~/Content/vendor/popper.min.js"></script>
    <script src="~/Content/vendor/bootstrap/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="~/fonts/fontawesome-free-6.0.0-web/css/all.min.css">

</head>
<body>
    <header>
        <div class="topnav">
            <a href="~/Admin/ListSubject">Quản Lý Khóa Học</a>
            <a href="~/Admin/ListOder"> Quản Lý Học viên Đăng ký </a>
            <a href="#">Quản Lý Nhân Viên</a>
            @* <a href="#">Deal Sốc</a>
        <a href="#">Liên Hệ</a>
        <a href="#other" tittle="Khác"><i class="fa-solid fa-ellipsis-h"></i></a>
        <span class="icon"><i class="fa fa-search"></i></span>*@
            <input type="search" id="search" placeholder="Tìm kiếm" />
            @*<a href="~/Cart/Index"><i class="fa fa-cart-plus"></i></a>*@
            @if (Session["idUser"] != null)
            {
                <a href="~/Account/MyProfile" style="border-left:1px solid gray; padding: 10px">My Profile</a>
                <a href="~/Home/Logout" style="color: white; background-color:#00aeef; width:80px; height:32px; padding-left:10px">Đăng Xuất</a>
            }
            else
            {
                <a href="~/Home/Login" style="border-left:1px solid gray; padding: 10px">Đăng nhập</a>
                <a href="~/Home/Register" style="color: white; background-color:#00aeef; width:80px; height:32px; padding-left:10px">Đăng ký</a>
            }
            <hr>
        </div>
    </header>
    <main>




        @RenderBody()

        <section id="contact">
            <div class="contact container-fluid">
                <h2 class="text-center"><strong>Contact Us</strong></h2>
                <p class="text-center">Lorem ipsum dolor sit amet, consectetuer adipiscing elit.</p>
                <div class="row" style="margin-left:400px">
                    <!-- left col -->
                    <div class="col-lg-6">
                        <form action="#" method="POST">
                            <div class="row">
                                <div class="col-lg-6">
                                    <input type="text" name="name" placeholder="Your name" class="form-control">
                                </div>
                                <div class="col-lg-6">
                                    <input type="email" name="email" placeholder="Your email" class="form-control">
                                </div>

                                <div class="col-lg-12">
                                    <textarea name="message" cols="20" rows="5" placeholder="Your message" class="form-control"></textarea>
                                </div>

                                <div class="col-lg-12 text-right">
                                    <button type="submit">SUBMIT</button>
                                </div>

                            </div>
                        </form>
                    </div>
                    <!-- right col -->

                </div>
            </div>
        </section>
    </main>
    <footer>
        <div class="container-fluid">
            <p>© Copyright</p>
        </div>
        <a href="#" class="back-to-top">
            <i class="fas fa-chevron-up"></i>
        </a>


        <div class="hotline-phone-ring-wrap">
            <div class="hotline-phone-ring">
                <div class="hotline-phone-ring-circle"></div>
                <div class="hotline-phone-ring-circle-fill"></div>
                <div class="hotline-phone-ring-img-circle">
                    <a href="tel:0584194012" class="pps-btn-img">
                        <img src="https://nguyenhung.net/wp-content/uploads/2019/05/icon-call-nh.png" alt="Gọi điện thoại" width="50">
                    </a>
                </div>
            </div>

            <div class="hotline-bar">
                <a href="tel:0584194012">
                    <span class="text-hotline">058 419 4012</span>
                </a>
            </div>
        </div>
    </footer>
</body>
</html>