@model Webhoconl.Models.HomeModel
@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<!--SLIDE CAROUSEL------------->
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <a href="/Category/SubjectDetail/1"><img class="d-block w-100" src="/Content/img/english.png" alt="First slide"></a>
        </div>
        <div class="carousel-item">
            <a href="/Category/SubjectDetail/2"><img class="d-block w-100" src="/Content/img/japansese.png" alt="Second slide"></a>
        </div>
        <div class="carousel-item">
            <a href="/Category/SubjectDetail/3"><img class="d-block w-100" src="/Content/img/french.png" alt="Third slide"></a>
        </div>
        <div class="carousel-item">
            <a href="/Category/SubjectDetail/5"><img class="d-block w-100" src="/Content/img/korea.png" alt="Third slide"></a>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<hr>
@using (Html.BeginForm("Search", "Home", FormMethod.Get))
{
    <p>
        @Html.TextBox("SearchString", ViewBag.currentFilter as string)
        <input type="submit" value=" Tìm Kiếm" />
    </p>
}


