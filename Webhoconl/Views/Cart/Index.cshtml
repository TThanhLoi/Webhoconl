@model List<Webhoconl.Models.ItemCart>
@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Giỏ hàng</title>
    <link rel="stylesheet" href="~/content/css/giohang.css">
    <link rel="stylesheet" href="~/content/vendor/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/content/vendor/fontawesome/css/all.min.css">
    <script src="~/content/vendor/jquery-3.5.1.slim.min.js"></script>
    <script src="~/content/vendor/popper.min.js"></script>
    <script src="~/content/vendor/bootstrap/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="~/content/fontawesome-free-6.0.0-web/css/all.min.css">
</head>
<body>

    <h2>Giỏ Hàng</h2>
    @if (Model.Count > 0)
    {
        <section id="left">
            @foreach (var item in Model)
            {
                <div class="u-box-cart">
                    <div class="u-cart-course">
                        <div class="img-cart-course">
                            <img src="~/Content/img/@item.subject.Img" alt="" style="width:140px; height:70px;">
                        </div>

                        <div class="title-cart-course">
                            <p>@item.subject.Name </p>
                            <span>@item.subject.Lecturer</span>
                        </div>

                        <div class="price-cart cart-price-sub">
                            <p>@item.subject.Price_discount<sup>đ</sup></p>
                        </div>


                        <div class="remove-course" style="padding-left: 20px; color: red">
                            <i class="fa fa-times del_cart" type="course_id" title="Xóa khóa học này" alt="Xóa khóa học này"></i>
                        </div>
                    </div>
                </div>
            }
        </section>
    }
    else
    {
    <span class="alert alert-danger"> khong co khoa hoc nao trong gio hang</span>
    }





    <section id="right">

        <div class="block-buy block-buy-course-detail">
            <div class="u-sm-left">
                <ul>
                    <li>
                        <h4 style="color:red"><strong>@ViewBag.Total <sup>đ</sup></strong></h4>
                    </li>
                </ul>
                <div id="button">
                    <div>
                        
                            <a style="color: #fff; font-weight: bold; text-align:center" id="dk" href="@Url.Action("Index","Payment")">Thanh Toán </a>
                        
                    </div>

                </div>
            </div>
        </div>

    </section>


</body>
</html>